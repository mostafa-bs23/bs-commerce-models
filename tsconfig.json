{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "rootDir": "src",
    "baseUrl": "./",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}